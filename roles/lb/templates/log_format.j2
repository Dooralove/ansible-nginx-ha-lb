# roles/lb/templates/log_format.j2
# Managed by Ansible role: lb
# Defines a log format that includes upstream address and status
log_format with_upstream '$remote_addr - $remote_user [$time_local] '
                         '"$request" $status $body_bytes_sent '
                         '"$http_referer" "$http_user_agent" '
                         'upstream:"$upstream_addr" upstream_status:"$upstream_status"';

access_log {{ lb_access_log_path }} with_upstream;
